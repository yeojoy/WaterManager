<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="me.yeojoy.watermanager.WaterConfiguration"
	tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/tv_label_height"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="@string/user_height"/>

    <EditText
        android:id="@+id/et_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_label_height"
        android:layout_toLeftOf="@+id/tv_label_height_unit"
        android:layout_alignBaseline="@id/tv_label_height"
        android:inputType="numberDecimal"
        android:hint="@string/hint_height"/>

    <TextView
        android:id="@id/tv_label_height_unit"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="3dp"
        android:layout_alignBaseline="@id/et_height"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="@string/height_unit"/>

    <TextView
        android:id="@+id/tv_label_weight"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_label_height"
        android:gravity="center"
        android:text="@string/user_weight"/>

    <EditText
        android:id="@+id/et_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_label_weight"
        android:layout_toLeftOf="@+id/tv_label_weight_unit"
        android:layout_alignBaseline="@id/tv_label_weight"
        android:inputType="numberDecimal"
        android:hint="@string/hint_weight"/>

    <TextView
        android:id="@id/tv_label_weight_unit"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="3dp"
        android:layout_alignBaseline="@id/et_weight"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="@string/weight_unit"/>

    <TextView
        android:id="@+id/tv_result_quantity"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@id/tv_label_weight"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="30dp"
        android:text="2000 ml"/>
    <TextView
        android:id="@+id/tv_result_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_result_quantity"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="left|top"
        android:text="당신이 하루동안 마셔야할 양입니다. "/>

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp" />
</RelativeLayout>